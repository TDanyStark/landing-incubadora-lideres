---
import { URL_BASE } from '@/config';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/webp"
      href={`${URL_BASE}/favicon-dark.webp`} 
      media="(prefers-color-scheme: dark)"
    />
    <link
      rel="icon"
      type="image/webp"
      href={`${URL_BASE}/favicon-light.webp`} 
      media="(prefers-color-scheme: light)"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-primary">
    <slot />
  </body>
</html>

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  .section-spacing-da {
    padding-bottom: 6rem;
  }
</style>
