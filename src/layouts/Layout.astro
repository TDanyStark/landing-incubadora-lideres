---
import { URL_BASE } from '@/config';
import '@fontsource/poppins/300.css';
import '@fontsource/poppins/400.css';
import '@fontsource/poppins/700.css';
// preload fonts
import poppinsWoff2 from '@fontsource/poppins/files/poppins-latin-300-normal.woff2?url';
import poppinsWoff2_2 from '@fontsource/poppins/files/poppins-latin-400-normal.woff2?url';
import poppinsWoff2_3 from '@fontsource/poppins/files/poppins-latin-700-normal.woff2?url';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/webp"
      href={`${URL_BASE}/favicon-dark.webp`} 
      media="(prefers-color-scheme: dark)"
    />
    <link
      rel="icon"
      type="image/webp"
      href={`${URL_BASE}/favicon-light.webp`} 
      media="(prefers-color-scheme: light)"
    />
    <link rel="preload" as="font" type="font/woff2" href={poppinsWoff2} crossorigin="anonymous" />
    <link rel="preload" as="font" type="font/woff2" href={poppinsWoff2_2} crossorigin="anonymous" />
    <link rel="preload" as="font" type="font/woff2" href={poppinsWoff2_3} crossorigin="anonymous" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-primary">
    <slot />
  </body>
</html>

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  body {
    font-family: 'Poppins', sans-serif;
  }


  .section-spacing-da {
    padding-bottom: 5rem;
  }

  /* in desktop 8rem */
  @media screen and (min-width: 768px) {
    .section-spacing-da {
      padding-bottom: 7rem;
    }
    
  }
</style>
